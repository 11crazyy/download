<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.httpdownloadserver.dao.FileDAO">
    <resultMap id="FileResultMap" type="com.example.httpdownloadserver.dataobject.FileDO">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="file_type" jdbcType="VARCHAR" property="fileType"/>
        <result column="file_name" jdbcType="VARCHAR" property="fileName"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="size" jdbcType="BIGINT" property="size"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>
    <insert id="insert">
        insert into file (file_type, file_name, size, url,gmt_created)
        values (#{fileType}, #{fileName}, #{size}, #{url}, now())
    </insert>
    <select id="order" resultMap="FileResultMap"
            parameterType="com.example.httpdownloadserver.param.FileQueryParam">
        select id, url,file_type as fileType, file_name as fileName, size, gmt_created as gmtCreated
        from file
        <where>
            <if test="fileType != null and !fileType.equals('all')">
                and file_type = #{fileType}
            </if>
        </where>
        <choose>
            <when test="orderType == 'name'">
                order by file_name
            </when>
            <when test="orderType == 'size'">
                order by size
            </when>
            <otherwise>
                order by gmt_created
            </otherwise>
        </choose>
        <if test="orderAsc != null and orderAsc">
            asc
        </if>
        <if test="orderAsc != null and !orderAsc">
            desc
        </if>
    </select>
    <select id="pageQuery" resultType="com.example.httpdownloadserver.dataobject.FileDO">
        select id, file_type as fileType, file_name as fileName, size,url, gmt_created as gmtCreated, gmt_modified as gmtModified from file
        <bind name="currentIndex" value="pagination*pageSize"/>
        limit #{currentIndex}, #{pageSize}
    </select>
    <select id="selectAllCounts" resultType="int">
        select count(1)
        from file
    </select>

</mapper>